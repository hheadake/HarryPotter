
        <main>

            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Name: {{photo.name}} </h1>
        
                            <h3>Created by an author: {{photo.owner.firstName}} {{photo.owner.lastName}}  </h3>
                            <div class="card_character">
                                <p class="card-species">Species: {{photo.species}} </p>
                                <p class="card-skin">Skin colour: {{photo.skinColor}} </p>
                                <p class="card-eye">Eye Colour: {{photo.eyeColor}} </p>
                            </div>

                            <p class="disc"> {{photo.description}} </p>

                            <!-- If there is no registered user, do not display buttons-->
                            {{#if isAuthenticated}}
                           
                            <div class="social-btn">
                                <!-- Only for registered user and author of the post -->
                                {{#if isOwner}}
                                <a href="/photo/{{photo._id}}/edit" class="edit-btn">Edit</a>
                                <a href="/photo/{{photo._id}}/delete" class="del-btn">Delete</a>
                                
                               {{/if}}

                             
                                <!-- logged in users, who have not yet voted-->
                                {{#unless isOwner}}
                                {{#if hasVoted}}
                                
                             <p class="thanks-for-vote">Thanks For Voting</p>
                                <!-- logged in users, who have not yet voted-->
                                {{else}} 
                                  <a href="/photo/{{photo._id}}/vote" class="vote-up">Vote</a>

                                {{/if}}
                                {{/unless}}
                                <!-- logged in user who has already voted
                                                            
                                                             -->

                            </div>
                         {{/if}}
                    
                        </div>
                    </div>
                            
                    <div class="card_right">
                        <img src={{photo.image}}
                            alt="image">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                                <p class="PV">Total rating of votes: {{photo.votes.length}} </p>
                            </div>
                            {{#if photo.votes}}
                            
                            <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                            
                            <p class="disc">People who voted for the post - {{userEmails}} </p>
                            
                           {{else}}
                            <!-- If not display: -->
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                           
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>

        </main>

